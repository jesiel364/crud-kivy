#:import hex kivy.utils.get_color_from_hex

<MD3Card>
    padding: 16
    size_hint: None, None
    size: "200dp", "100dp"

    MDRelativeLayout:
        size_hint: None, None
        size: root.size

        MDIconButton:
            icon: "dots-vertical"
            pos:
                root.width - (self.width + root.padding[0] + dp(4)),                     root.height - (self.height + root.padding[0] + dp(4))

        MDLabel:
            id: label
            text: root.text
            adaptive_size: True
            color: .2, .2, .2, .8



<ListComAvatar>:
    on_release: app.abrir
	ImageLeftWidget:
		source: root.source
		
	

<VendasWindow>:
	orientation: 'vertical'
	MDBoxLayout:
		orientation: 'vertical'
		# size_hint_y: .5
		canvas.before:
			Color:
				rgba: hex('#eeeeee')
			Rectangle:
				size: self.size
				pos: self.pos


		spacing: .5


		MDToolbar:
			title: 'CRUD App'
			elevation: 10
			#size_hint_y: .15
		MDBoxLayout:
			orientation: 'vertical'
			
			
			MDBoxLayout:
                id: content

				#size_hint_y: .6
				orientation: 'vertical'

				canvas.before:
					Color:
						rgba: hex('eeeeee')
					Rectangle:
						size: self.size
						pos: self.pos


				ScrollView:
					scroll_timeout : 100
					MDList:
						id: container
						padding: 0

		                

        		


	    	

